@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>


<div asp-validation-summary="All" class="text-danger"> </div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" >
			
			<input  asp-for="Email" placeholder="Email">
			<span asp-validation-for="Email" class="text-danger"></span>

			<input  asp-for="Password" placeholder="Password">
			<span asp-validation-for="Password" class="text-danger"></span>

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Sign up Now!</a></p>
		<p> <a asp-action="ForgetPassword"> Forget Password</a></p>
		 
	</div>
</div>

@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />

}

